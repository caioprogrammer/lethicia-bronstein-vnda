<div class="social-media">
  <div class="facebook">
    <a aria-label="Compartilhar no Facebook" href="https://www.facebook.com/sharer/sharer.php?u=https://{{ current_shop.host }}{{ product.url }}" target="_blank">
      <svg class="icon">
        <use xlink:href="#icon-facebook"/>
      </svg>
    </a>
  </div>
  <div class="whatsapp">
    <a aria-label="Compartilhar no WhatsApp" href="https://wa.me/?text=https://{{ current_shop.host }}{{ product.url }}" target="_blank">
      <svg class="icon">
        <use xlink:href="#icon-whatsapp"/>
      </svg>
    </a>
  </div>
  <div class="pinterest">
    <a aria-label="Compartilhar no Pinterest" href="https://pinterest.com/pin/create/bookmarklet/?media={{ product.image_url }}&url=https://{{ current_shop.host }}{{ product.url }}" target="_blank">
      <svg class="icon">
        <use xlink:href="#icon-pinterest"/>
      </svg>
    </a>
  </div>
  <div class="twitter">
    <a aria-label="Compartilhar no Twitter" href="https://twitter.com/share?url=https://{{ current_shop.host }}{{ product.url }}" target="_blank">
      <svg class="icon">
        <use xlink:href="#icon-twitter"/>
      </svg>
    </a>
  </div>
</div>
