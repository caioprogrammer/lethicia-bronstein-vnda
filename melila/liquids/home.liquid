{% head %}
  {% if tag != blank %}
    <meta property="og:description" content="{{ tag.description }}">
    <meta property="og:image" content="{{ tag.image_url }}" />
    <meta property="og:url" content="{{ home_url }}" />
    <meta name="description" content="{{ tag.description }}">
    <meta name="image" content="{{ tag.image_url }}" />
    <meta meta="url" content="{{ home_url }}" />

    <title>{{ tag.title }}</title>
  {% endif %}

  <link
    href="pages/home_above.css"
    inline
    rel="stylesheet"
    type="text/css">
  <link
    rel="stylesheet"
    href="{{ 'pages/home.css' | stylesheet_path }}"
    media="print"
    onload="this.media='all'" />
{% endhead %}

{% body %}
  <script src="{{ 'home.js' | javascript_path }}"></script>
{% endbody %}

{% comment %} ========== {% endcomment %}

{% if mobile %}
  {% render 'partials/content/home/fullbanner', position: 'home-banner-principal-mobile', aux: '-principal', mobile: mobile %}
{% else %}
  {% render 'partials/content/home/fullbanner', position: 'home-banner-principal', aux: '-principal', mobile: mobile %}
{% endif %}
{% render 'partials/content/home/icons', position: 'home-banner-icones' %}
{% render 'partials/components/carousel', tag_name: 'home-produtos-superior' %}
{% render 'partials/components/carousel', tag_name: 'home-produtos-listagem' %}
{% render 'partials/content/home/categories', position: 'home-banner-categorias', limit: 4 %}
{% render 'partials/components/carousel', tag_name: 'home-produtos-inferior' %}
{% if mobile %}
  {% render 'partials/content/home/fullbanner', position: 'home-banner-secundario-mobile', aux: '-secundario', mobile: mobile %}
{% else %}
  {% render 'partials/content/home/fullbanner', position: 'home-banner-secundario', aux: '-secundario', mobile: mobile %}
{% endif %}
{% comment %} 
{% render 'partials/content/home/highlight', position: 'home-banner-grid', limit: 2 %}
{% render 'partials/content/home/seo', position: 'home-banner-seo', limit: 1 %}
{% endcomment %}
{% render 'partials/content/home/instagram', environment: environment %}