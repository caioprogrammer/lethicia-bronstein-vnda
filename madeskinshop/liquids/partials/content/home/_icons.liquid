{% load_banners position: position limit: 4  %}

{% if loaded_banners.size > 0 %}
  <section class="section section-icons">
    <div class="icons container">
      {% for banner in loaded_banners %}
        <div class="item">
          <figure class="image-icon">
            <img class="lazy" data-src="{{ banner.file_url | resize: '100x' }}" alt="{{ banner.title }}"/>
            <div class="skeleton"></div>
          </figure>

          <div class="text">
            {{ banner.description | replace: '<h3', '<h3 class="upper-title"'| replace: '<h2', '<h2 class="title"' | replace: '<p', '<p class="description"' }}
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
{% endif %}
